<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#704591"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10.3" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="100"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="26.6pt"
                android:orientation="vertical">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                    <!--뒤로가기 버튼-->
                    <ImageButton
                        android:id="@+id/btn_CloseDrawer"
                        android:layout_width="9.9pt"
                        android:layout_height="9.9pt"
                        android:layout_marginBottom="15.2pt"
                        android:background="#00000000"
                        android:src="@drawable/ic_baseline_clear_24" />


                    <!--이미지 뷰와 그 이외에 정보들-->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15.1pt"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="40pt"
                            android:layout_height="40pt"
                            android:layout_marginRight="8.5pt"
                            android:background="@drawable/main_nav_image_round"
                            android:elevation="3dp"
                            android:src="@drawable/ic_baseline_person_24" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="안녕하세요!"
                                android:textColor="#ffffff"
                                android:textSize="9pt" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/main_nav_username"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="유저이름"
                                    android:textColor="#ffffff"
                                    android:textSize="10.5pt" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="님"
                                    android:textColor="#ffffff"
                                    android:textSize="9pt" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                    </LinearLayout>
                </LinearLayout>



            </LinearLayout>
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="#ffffff" />

            <ListView
                android:id="@+id/main_nav_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="#ffffff"
                android:dividerHeight="2px" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="#ffffff" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="10.3" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35pt"
            android:layout_weight="1"
            android:background="#ffffff">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawableLeft="@drawable/question2"
                android:drawablePadding="1.3pt"
                android:gravity="center"
                android:text="설정"
                android:textColor="#704591"
                android:textSize="9pt" />
        </RelativeLayout>


        <LinearLayout
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#ffffff">

            <LinearLayout
                android:layout_width="1px"
                android:layout_height="15.4pt"
                android:background="#B6B6B6"
                android:layout_gravity="center"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35pt"
            android:layout_weight="1"
            android:background="#ffffff">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawableLeft="@drawable/gear2"
                android:drawablePadding="1.3pt"
                android:gravity="center"
                android:text="설정"
                android:textColor="#704591"
                android:textSize="9pt" />
        </RelativeLayout>

    </LinearLayout>


</RelativeLayout>